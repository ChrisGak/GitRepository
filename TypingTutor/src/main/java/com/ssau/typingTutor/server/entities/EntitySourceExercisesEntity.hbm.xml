<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.ssau.typingTutor.server.entities.EntitySourceExercisesEntity" table="exercises"
           schema="typingTutor" catalog="postgres">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="text">
            <column name="text" sql-type="text"/>
        </property>
        <property name="name">
            <column name="name" sql-type="text" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <section class="area">
        <div class="container">
            <div class="subscribe">
                <h3>Войти</h3>
                <form class="form-inline">

                    <div class="form-group">
                        <input type="text" class="form-control rounded" id="login" placeholder="Логин..."/>
                        <input type="password" class="form-control rounded" id="password" placeholder="Пароль..."/>
                        <input type="password" class="form-control rounded" id="password_duplicate" placeholder="Повторите пароль..."/>
                        <button id="register" type="submit" class="btn btn-primary rounded">Регистрация</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</ui:UiBinder>